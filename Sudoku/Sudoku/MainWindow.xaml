<Window x:Class="Sudoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sudoku"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="5">
            <Grid x:Name="xGridPuzzleBoard">
                <TextBox>FUCK</TextBox>
            </Grid>
        </Border>
        <Border BorderThickness="5" Grid.Column="1">
            <StackPanel x:Name="xStackPanelOptions"  >
                <StackPanel Orientation="Horizontal" >
                    <TextBlock FontSize="20">문제 크기 설정</TextBlock>
                    <ComboBox x:Name="xComboBoxSelectPuzzleSize" HorizontalAlignment="Right" SelectedIndex="0" SelectionChanged="xComboBoxGridsizeSelectChanged">
                        <ComboBox.Items>
                            <ComboBoxItem>3</ComboBoxItem>
                            <ComboBoxItem>4</ComboBoxItem>
                            <ComboBoxItem>5</ComboBoxItem>
                            <ComboBoxItem>6(Maybe Impossible?)</ComboBoxItem>
                            <ComboBoxItem>7(Maybe Impossible?)</ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>
                    <TextBlock FontSize="20">예제 입력</TextBlock>
                    <ComboBox x:Name="xComboBoxSelectSampleInput" SelectedIndex="0">
                        <ComboBox.Items>
                            <ComboBoxItem>1</ComboBoxItem>
                            <ComboBoxItem>2</ComboBoxItem>
                            <ComboBoxItem>3</ComboBoxItem>
                            <ComboBoxItem>4</ComboBoxItem>
                            <ComboBoxItem>5</ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>
                    <Button x:Name="xButtonSolveNow">풀어</Button>
                    <Button x:Name="xButtonRandomGenerate">랜덤으로 만들어라</Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
